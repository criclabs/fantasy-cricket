<tr>
  <td>
    <%= link_to usertab.name, usertab %>
  </td>

  <td class="team-name">
    <% if usertab.teams.any? %>
      <% if usertab.teams.first.validated %>
        <span class="glyphicon glyphicon-ok"></span>
      <% else %>
        <span class="glyphicon glyphicon-thumbs-down"></span>
      <% end %>
      <%= link_to(usertab.teams.first.name, usertab.teams.first) %>
    <% else %>
      -
    <% end %>
  </td>
  <td class="text-right">
    <%= usertab.totalscore %>
  </td>
  <td class="timestamp">Updated <%= time_ago_in_words(usertab.updated_at) %> ago.</td>
</tr>