<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/team_form' %>
    </section>
  </aside>
 <div class="span8">
    <% if @user.teams.any? %>
      <h3>Teams: (<%= @user.teams.count %>)</h3>
      <ol class="teams">
        <%= render @teams %>
      </ol>
      <%= will_paginate @teams %>
    <% else %>
      <h3>Teams: user has no teams</h3>
    <% end %>

</div>
