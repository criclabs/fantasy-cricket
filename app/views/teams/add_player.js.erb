$("#inner-player-modal").html("<%= escape_javascript(render 'change') %>")
<% if @team.errors.any? %>
	$("div.error_explanation").append($("<h2 />").html("<%= pluralize(@team.errors.count, 'error') %> prohibited this player from added:"))
	$("div.error_explanation").append($("<ul class='errors' />"))
	<% @team.errors.full_messages.each do |msg| %>
		$("ul.errors").append($("<li />").html("<%= msg.html_safe %>"))
	<% end %>
	$("#player-modal").modal("show")
<% else %>
	$(".player-index").html("<%= escape_javascript(render 'players/index') %>")
	$("div.flash-container").html("<%= escape_javascript(render 'layouts/flash') %>")
	$("#player-modal").modal("hide")
<% end %>
