<%= simple_form_for(@token) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, placeholder: "user@example.com" %>
    <%= f.input :realname, placeholder: "Full name" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-large btn-primary" %>
  </div>
<% end %>
