        <td><%= @player.ls_bat_ducks %></td>
        <td><%= @player.ls_bat_not_outs %></td>
        <td><%= @player.ls_bat_fifties %></td>
        <td><%= @player.ls_bat_hundreds %></td>
      </tr>
      <tr>
