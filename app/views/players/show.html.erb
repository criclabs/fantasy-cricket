        <td><%= @player.ls_bowl_overs %></td>
        <td><%= @player.ls_bowl_maidens %></td>
        <td><%= @player.ls_bowl_runs %></td>
        <td><%= @player.ls_bowl_wickets %></td>
        <td><%= @player.ls_bowl_4_wickets %></td>
        <td><%= @player.ls_bowl_6_wickets %></td>
      </tr>
      <tr>
        <th></th>
        <th>Catches</th>
        <th>Runouts</th>
        <th>Stumpings</th>
        <th>Drops</th>
      </tr>
      <tr class="success">
        <th>Fielding</th>
        <td><%= @player.ls_field_catches %></td>
        <td><%= @player.ls_field_runouts %></td>
        <td><%= @player.ls_field_stumpings %></td>
        <td><%= @player.ls_field_drops %></td>
      </tr>
      <tr>
        <th></th>
        <th>Man of match</th>
      </tr>
