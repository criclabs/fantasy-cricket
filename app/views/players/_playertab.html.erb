<tr>
  <td>
    <%= link_to playertab.name, playertab %>
  </td>
  

  <td class="age_category"><%= playertab.age_category %></td>
  <td class="text-right"><%= playertab.total %></td>
  <td class="text-right"><%= playertab.bat_score %></td>
  <td class="text-right"><%= playertab.bowl_score %></td>
  <td class="text-right"><%= playertab.field_score %></td>
  <td class="text-right"><%= playertab.bat_avg_invalid ? "-" : "%.2f" % playertab.bat_avg %></td>
  <td class="text-right"><%= playertab.bowl_avg_invalid ? "-" : "%.2f" % playertab.bowl_avg %></td>
  <td>
    <div class="dropdown">
      <button class="btn dropdown-toggle sr-only" type="button" id="dropdownMenu1" data-toggle="dropdown">
        Action
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
        <li role="presentation"><%= link_to "Show", playertab, role: "menuitem", tabindex: "-1" %></li>
        <li role="presentation"><%= link_to "Add to #{current_user.teams.first.name}",  add_player_to_team_path(current_user.teams.first, :player => playertab), team: current_user.teams.first, method: :post, role: "menuitem", tabindex: "-1" %></li>
        <li role="presentation"><%= link_to "Remove from #{current_user.teams.first.name}",  remove_player_from_team_path(current_user.teams.first, :player => playertab), team: current_user.teams.first, method: :delete, role: "menuitem", tabindex: "-1" %></li>
        <% if admin_user? %>
          <li role="presentation"><%= link_to "Edit", edit_player_path(playertab), role: "menuitem", tabindex: "-1" %></li>
          <li role="presentation"><%= link_to "Destroy", playertab, method: :delete, data: { confirm: 'Are you sure?' }, role: "menuitem", tabindex: "-1" %></li>
        <% end %>
      </ul>
    </div>
  </td>
</tr>