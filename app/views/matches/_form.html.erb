<%= simple_form_for(@match) do |f| %>
  <%= f.error_notification %>

  <!-- for datepicker instructions, see http://allthingsrails.com/post/18389560407/using-jquery-ui-datepicker-with-rails -->
  <div class="form-inputs">
    <%= f.input :matchname %>
	<%= f.input :date, :as => :string, :input_html => { :class => 'jquery-ui-date'} %>
	<%= f.input :date, :as => :hidden, :input_html => { :id => 'date-alt'} %>
    <%= f.input :mom, :collection => Player.all.map { |p| [p.name, p.id] }, label_method: :first, value_method: :last, prompt: "Man of Match" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value => "Save" %>
  </div>
<% end %>
